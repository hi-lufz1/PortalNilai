<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Laporan Nilai</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="mb-4">Laporan Nilai Mata Kuliah</h1>

    <!-- Dropdown untuk memilih mata kuliah -->
    <form id="formLaporan" method="GET" action="/laporan/nilai">
      <div class="mb-3">
        <label for="idMk" class="form-label">Pilih Mata Kuliah</label>
        <select id="idMk" name="idMk" class="form-select" required>
          <option value="" disabled selected>Pilih Mata Kuliah</option>
          <% matakuliahList.forEach(mk => { %>
            <option value="<%= mk.idMk %>"><%= mk.namaMk %></option>
          <% }); %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Lihat Nilai</button>
    </form>

    <!-- Tabel nilai mata kuliah -->
    <% if (laporanList && laporanList.length > 0) { %>
      <div class="mt-4">
        <h2>Nilai Mata Kuliah: <%= namaMk %></h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>No</th>
              <th>Nama Mahasiswa</th>
              <th>Nilai</th>
              <th>Predikat</th>
              <th>Keterangan</th>
            </tr>
          </thead>
          <tbody>
            <% laporanList.forEach((laporan, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= laporan.namaMahasiswa %></td>
                <td><%= laporan.nilai %></td>
                <td><%= laporan.predikat %></td>
                <td><%= laporan.keterangan %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>

        <!-- Tombol unduh -->
        <form action="/laporan/unduh" method="GET">
          <input type="hidden" name="idMk" value="<%= idMk %>">
          <button type="submit" class="btn btn-success">Unduh Laporan</button>
        </form>
      </div>
    <% } else if (laporanList) { %>
      <p class="mt-4 text-danger">Tidak ada data nilai untuk mata kuliah ini.</p>
    <% } %>
  </div>
</body>
</html>
