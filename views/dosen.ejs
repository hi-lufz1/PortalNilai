<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
     body {
            background-color: #f8f9fa;
        }
        .sidebar {
            background-color: #212639;
            min-height: 100vh;
            color: white;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
        }
        .sidebar a:hover {
            background-color: #212639;
        }
        .table-wrapper {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .btn-action {
            font-size: 0.85rem;
        }
</style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar p-3">
            <h5 class="text-center py-3">PORTAL AKADEMIK</h5>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link" href="#">Dashboard</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="#">Tambah Nilai</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/portalnilai/dosen/laporan/nilai">Laporan</a>
                  </li>
            
                <!-- Pop up anggota kelompok -->
                <li class="nav-item mb-2">
                    <a class="nav-link" data-bs-toggle="modal" data-bs-target="#infoModal" href="#">Kelompok</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="/portalnilai/dosen/logout">Logout</a>
                </li>
            </ul>
        </div>

        <!-- Tampilkan anggota kelompok -->
    <div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="infoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="infoModalLabel">Kelompok 6 - PAW Kelas D</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>TEMA :</strong> Portal Akademik</p>
                    <ul>
                        <li>20220140160 - Ersa UI</li>
                        <li>20220140169 - Rifqi Test</li>
                        <li>20220140177 - Adifa UC</li>
                        <li>20220140181 - Latif ERD</li>
                        <li>20220140182 - Lutfi CD</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

        <!-- Main Content -->
        <div class="container-fluid p-4">
            <h4>Daftar Mata Kuliah dan Nilai</h4>
            <div class="table-wrapper mt-4 p-3">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Id Mata Kuliah</th>
                            <th>Nama Mata Kuliah</th>
                            <th>Nilai</th>
                            <th>NIP Dosen</th>
                            <th>NIM Mahasiswa</th>
                            <th>Predikat</th>
                            <th>Keterangan</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data.length > 0) { %>
                            <% data.forEach(nilai => { %>
                                <tr>
                                    <td><%= nilai.idMk %></td>
                                    <td><%= nilai.namaMk %></td>
                                    <td><%= nilai.nilai %></td>
                                    <td><%= nilai.idDosen %></td>
                                    <td><%= nilai.idMahasiswa %></td>
                                    <td><%= nilai.predikat %></td>
                                    <td><%= nilai.keterangan %></td>
                                    <td>
                                        <button class="btn btn-warning btn-sm btn-action">Edit</button>
                                        <button class="btn btn-danger btn-sm btn-action">Hapus</button>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center">No data available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>

